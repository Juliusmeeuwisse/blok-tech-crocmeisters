</section>
<section class="myGenres">
    <h1 id="profileH1">Your Genres</h1>
    <article>
        <ul>
        {{#each myProfile.genres}}
            <li>{{this}},</li>
        {{/each}}
        </ul>
    </article>
</section>
<section class="confirmProfile">   
    <form action="/confirmProfile" method="POST">
        <button name="confirm" value="true">Confirm</button>
        <button name="decline" value="false">Decline</button>
    </form>
</section>