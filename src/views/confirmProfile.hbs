<section class="newProfile" >
    <h1>We've collected the following data for your profile:</h1>
     <article>
        <img src='{{profileImg}}' alt="profiel foto">
        <ul>
            <li>Username:</li>
            <li>{{myProfile.name}}</li>
            <li>E-mail:</li>
            <li>{{myProfile.email}}</li>
        </ul>
    </article>
</section>
<section class="mySongs">
    <h1 id="profileH1">Your Favourite Songs:</h1>
    {{#each myProfile.songs}}
        <article>
            <img src='{{albumArt}}' alt="favourite song">
            <div>
                <div>
                    <h2>{{title}}</h2>
                    <p>{{artist}}</p>
                </div>
                <button class='play'><span></span></button>
                <audio src="{{source}}"></audio>
            </div>
            <button id="changeSongs">Change Song</button>
        </article>
    {{/each}}
